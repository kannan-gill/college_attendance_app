<%-include ("partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Student Registration </h1>
        <div style="width:30%;margin:25px auto;">
        <form method="POST" action="/attendance">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Enter your name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="rfid" placeholder="Enter your unique Rfid">
            </div>
             <div class="form-group">
                <input class="form-control" type="Number" name="sid" placeholder="Enter your SID">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="branch" placeholder="Enter your branch">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary">Submit!</button>
            </div>
        </form>
        <a href="/attendance">Back to home page</a>
    </div>
    </div>
</div>
<%-include ("partials/footer") %>